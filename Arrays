//Arrays - A type of data structure that acts like a box with individual items. Each Item has its own location

const fruitArray = ["banana", "apple", "orange"];
console.log(fruitArray);

//Alternate way to form an array

const cars = new Array("volvo", "jaguar", "tesla");
console.log(cars);

// Below I will showcase some array methods

// filter
let filteredcars = cars.filter(cars => cars == "volvo");
 console.log(filteredcars);

 let numbers = [1,2,3,4,5,6];
 
 // This allow us to get the accumulated numbers
 let reducedNumbers = numbers.reduce((acc,num )=>{
    return num + acc;
 }, 0);
 console.log(reducedNumbers);

 // .map allows us to create a new array and apply a callback function to it
function tenTimes(num){
return num * 10
}
 let mappedNums = numbers.map(tenTimes);
 let mappedNumTwo = numbers.map((num) => num * 2);
 console.log(mappedNums);
 console.log(mappedNumTwo);